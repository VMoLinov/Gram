<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetChoice"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_height"
    android:background="@color/colorAccent"
    android:gravity="end"
    android:orientation="horizontal"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/btnAttachImage"
        android:layout_width="@dimen/bottom_sheet_image_size"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:contentDescription="@string/bottom_sheet_attach_image"
        android:src="@drawable/ic_attach_image" />

    <ImageView
        android:id="@+id/btnAttachFile"
        android:layout_width="@dimen/bottom_sheet_image_size"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:contentDescription="@string/bottom_sheet_attach_file"
        android:src="@drawable/ic_attach_file" />
</androidx.appcompat.widget.LinearLayoutCompat>
